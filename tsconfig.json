{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES6"],
    "module": "ES6",
    "outDir": "./dist/",
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES6",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "experimentalDecorators": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  }
}
