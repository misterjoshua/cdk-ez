{
  "name": "cdk-ez",
  "version": "0.1.0",
  "description": "Zero-config easy AWS CDK serverless development",
  "author": "Josh Kellendonk",
  "license": "MIT",
  "bin": {
    "cdk-ez": "dist/index.js"
  },
  "scripts": {
    "build": "webpack --mode=development && chmod +x dist/index.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
