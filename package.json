{
  "name": "cdk-ez",
  "version": "0.3.1",
  "description": "Zero-config easy AWS CDK serverless development",
  "author": "Josh Kellendonk",
  "license": "MIT",
  "bin": {
    "cdk-ez": "dist/index.js"
  },
  "files": [
    "dist/index.js",
    "template"
  ],
  "scripts": {
    "build": "rollup -c && chmod +x dist/index.js",
    "watch": "rollup -c && chmod +x dist/index.js && rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --roots e2e",
    "lint": "eslint 'src/**/*.ts' '*.js'",
    "lint:fix": "eslint 'src/**/*.ts' '*.js' --fix",
    "lint:staged": "lint-staged",
    "run": "node dist/index.js $*",
    "cdk-ez": "run-s build run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint:staged test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@aws-cdk/core": "^1.19.0",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@rollup/plugin-typescript": "^2.0.1",
    "@types/aws-lambda": "^8.10.39",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.2",
    "@types/prettier": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "chokidar": "^2.1.8",
    "eslint": "^6.8.0",
    "eslint-config-cdk-ez": "^0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "execa": "^4.0.0",
    "fs-extra": "^8.1.0",
    "jest": "^24.9.0",
    "listr": "^0.14.3",
    "prettier": "^1.19.1",
    "rollup": "^1.27.14",
    "sade": "^1.7.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.1",
    "@types/eslint": "^6.1.3",
    "@types/listr": "^0.14.2",
    "@types/sade": "^1.6.0",
    "@types/temp": "^0.8.34",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "rollup-plugin-preserve-shebangs": "^0.1.2",
    "temp": "^0.9.1"
  },
  "eslintConfig": {
    "extends": "cdk-ez"
  }
}
